@using MyEnquiry_BussniessLayer.ViewModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var companies = (List<SelectView>)ViewBag.Companies;
    var casetypes = (List<SelectView>)ViewBag.CaseTypes; 

}
<link href="~/css/sweetalert/sweetalert.css" rel="stylesheet">
<link rel="stylesheet" href="~/dark-rtl/css/dataTables.bootstrap4.css">

<div class="container-fluid">
    <div class="row justify-content-center">

        <div class="col-lg-4">

            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header">
                            <strong class="card-title">إضافة حالة </strong>
                        </div>
                        <div class="card-body">

                            @using (Html.BeginForm("Add", "BankCases", new { area = "" }, FormMethod.Post, true, new { @id = "formadd" }))
                            {


                                <div class="form-group col-md-12  ">
                                    <label for="simple-select2">أنواع الحالات</label>
                                    <select name="CaseTypeId" class="form-control select2 req" id="simple-select2" width="100">
                                        <option value="">اختر نوع الحالة</option>
                                        @foreach (var item in casetypes)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group col-md-12  ">
                                    <label for="simple-select2">الشركات</label>
                                    <select name="CompanyId" class="form-control select2 req" id="simple-select2" width="100">
                                        <option value="">اختر الشركة</option>
                                        @foreach (var item in companies)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="customFile">اختر شيت الاكسيل</label>
                                    <div class="custom-file">
                                        <input type="file" name="File" accept=".xls, .xlsx" class="custom-file-input" id="customFile">
                                        <label class="custom-file-label" for="customFile">شيت الاكسيل</label>
                                    </div>
                                </div>
                               

                                <button type="submit" class="btn btn-primary">اضافة</button>
                            }



                        </div> <!-- /. card-body -->
                    </div> <!-- /. card -->
                </div> <!-- /. col -->
            </div> <!-- /. end-section -->

        </div>


        <div class="col-lg-8">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header">
                            <strong class="card-title">حالات البنوك</strong>
                        </div>
                        <div class="card-body">
                            <div class="dispalygrid">



                            </div>
                        </div> <!-- /. card-body -->
                    </div> <!-- /. card -->
                </div> <!-- /. col -->
            </div> <!-- /. end-section -->

        </div>

    </div>
</div>

<div class="disedit">

</div>

@section Scripts {


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.3.0/jquery.form.min.js" integrity="sha384-qlmct0AOBiA2VPZkMY3+2WqkHtIQ9lSdAsAn5RUJD/3vA5MKDgSGcdmIv4ycVxyn" crossorigin="anonymous"></script>
    <script src='~/dark-rtl/js/jquery.dataTables.min.js'></script>
    <script src='~/dark-rtl/js/dataTables.bootstrap4.min.js'></script>

    <script src="~/js/sweetalert/sweetalert.min.js"></script>

    <script src="~/js/cutompages/BankCases.js"></script>


}