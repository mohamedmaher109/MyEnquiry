@using MyEnquiry_BussniessLayer.ViewModel
@{
    ViewData["Title"] = "الحالات القادمة من البنك";

    Layout = "~/Pages/Shared/_Layout.cshtml";
    var banks = (List<SelectView>)ViewBag.Banks;

}
<link href="~/css/sweetalert/sweetalert.css" rel="stylesheet">
<link rel="stylesheet" href="~/dark-rtl/css/select2.css">

<link rel="stylesheet" href="~/dark-rtl/css/dataTables.bootstrap4.css">

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                       
                        <div class="card-body">
                            <div class="form-row">

                                <div class="form-group col-md-12  ">
                                    <label for="simple-select2">البنوك</label>
                                    <select name="BankId" class="form-control select2 BankId" id="simple-select2" width="100">
                                        <option value="">اختر البنك</option>
                                        @foreach (var item in banks)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                                
                            </div>
                        </div> <!-- /. card-body -->
                    </div> <!-- /. card -->
                </div> <!-- /. col -->
            </div>
            
        </div>


        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header">
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-md-12">
                                    <button class="btn btn-outline-danger refusedcases" type="button"> إرجاع ملف بالحالات المرفوضة الى البنوك</button>
                                </div>
                            </div>
                            <strong class="card-title">الحالات القادمة من البنوك</strong>
                        </div>
                        <div class="card-body">
                            <div class="dispalyCasesFromBank">



                            </div>
                        </div> <!-- /. card-body -->
                    </div> <!-- /. card -->
                </div> <!-- /. col -->
            </div> <!-- /. end-section -->

        </div>

    </div>
</div>
<div class="disfiles"></div>


@section Scripts {


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.3.0/jquery.form.min.js" integrity="sha384-qlmct0AOBiA2VPZkMY3+2WqkHtIQ9lSdAsAn5RUJD/3vA5MKDgSGcdmIv4ycVxyn" crossorigin="anonymous"></script>
    <script src='~/dark-rtl/js/jquery.dataTables.min.js'></script>
    <script src='~/dark-rtl/js/dataTables.bootstrap4.min.js'></script>

    <script src="~/js/sweetalert/sweetalert.min.js"></script>

    <script src="~/js/cutompages/CasesFromBank.js"></script>


}