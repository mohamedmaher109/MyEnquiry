@{
}
@model ICollection<MyEnquiry_DataLayer.Models.RefusedCases>

@using MyEnquiry.Helper
<table class="table datatables" id="dataTable-1">
    <thead>
        <tr>
            <th>رقم الحالة</th>
            <th>سبب الرفض</th>
            <th>نوع الحالة</th>
            
            <th>تمت المراجعة</th>
            
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>


            <td>@item.CaseNumber</td>
            <td>@item.Resoan</td>
            <td>@(item.Solved!=true?"جديدة":"تمت المراجعة")</td>



            <td>
                @if (item.Solved != true)
                {
                    <button type="button" data-id="@item.Id" class="btn mb-2 btn-outline-primary solve">استلام</button>
                }

                else
                {
                    <label class="alert alert-danger">تمت مراجعة الحالة</label>
                }


            </td>


        </tr>
        }



    </tbody>
</table>