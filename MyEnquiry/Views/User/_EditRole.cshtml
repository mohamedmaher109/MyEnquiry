@{
}
@model MyEnquiry_BussniessLayer.ViewModel.RoleView
<!-- Modal -->
<div class="modal fade"  id="EditRoleModal" tabindex="-1" role="dialog" aria-labelledby="defaultModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="defaultModalLabel">تعديل المجموعة</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("EditRole", "User", new { area = "" }, FormMethod.Post, true, new { @id = "formaEditRole" }))
            {
                <div class="modal-body">

                    @Html.HiddenFor(m=>m.Id)
                    <div class="form-group">
                        <label for="inputAddress">اسم المجموعة</label>
                        @Html.TextBoxFor(m=>m.Name, new { @class = "form-control reqE", @type = "text", @placeholder = "برجاء كتابة اسم المجموعة" })

                    </div>
            

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">اغلاق</button>
                    <button type="submit" class="btn btn-primary">حفظ التعديلات</button>
                </div>
            }
        </div>
    </div>
</div>
