@{
}
@model ICollection<MyEnquiry_DataLayer.Models.UserWallet>

@using MyEnquiry.Helper
<table class="table datatables" id="dataTable-1">
    <thead>
        <tr>
            <th>اسم المستخدم</th>
            <th>المستحق له</th>
            
            <th>دفع</th>
            
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GroupBy(s=>s.UserId).ToList())
        {
        <tr>


            <td>@item.FirstOrDefault().User.FullName</td>
            <td>@item.Sum(s=>s.Amount)</td>



            <td>
         
                    <button type="button" data-id="@item.FirstOrDefault().User.Id" class="btn mb-2 btn-outline-primary">دفع</button>                
            </td>


        </tr>
        }



    </tbody>
</table>