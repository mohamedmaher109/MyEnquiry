@model ICollection<MyEnquiry_BussniessLayer.ViewModel.RoleView>
<table class="table datatables" id="dataTable-1">
    <thead>
        <tr>
            <th>الاسم</th>

            <th>تعديل</th>
            <th>حذف</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Name</td>

                <td>
                    <button type="button" data-id="@item.Id" class="btn mb-2 btn-outline-primary editrole">تعديل</button>

                </td>
                <td>
                    <button type="button" data-id="@item.Id" class="btn mb-2 btn-outline-danger deleterole">حذف</button>

                </td>
            </tr>
        }



    </tbody>
</table>