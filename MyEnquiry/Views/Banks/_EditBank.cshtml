@{
}
@model MyEnquiry_DataLayer.Models.Banks
<!-- Modal -->
<div class="modal fade"  id="EditBankModal" tabindex="-1" role="dialog" aria-labelledby="defaultModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="defaultModalLabel">تعديل البنك</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Edit", "Banks", new { enctype = "multipart/form-data" }, FormMethod.Post, true, new { @id = "formaEdit" }))
            {
        <div class="modal-body">

            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label for="inputAddress">اسم البنك باللغة العربية</label>
                @Html.TextBoxFor(m => m.NameAr, new { @class = "form-control reqE", @type = "text", @placeholder = "برجاء كتابة اسم  باللغة العربية" })

            </div>
            <div class="form-group">
                <label for="inputAddress">اسم البنك باللغة الانجليزيه</label>
                @Html.TextBoxFor(m => m.NameEn, new { @class = "form-control reqE", @type = "text", @placeholder = "برجاء كتابة اسم باللغة الانجليزيه" })

            </div>
            <div class="form-group mb-3">
                <label for="customFile">اختر اللوجو الخاص بالبنك</label>
                <div class="custom-file">
                    @Html.TextBoxFor(m => m.Logofile, new { @class = "custom-file-input", @type = "file", @accept = "image/png, image/gif, image/jpeg" })
                    @*<input type="image" name="Logofile" class="custom-file-input" id="customFile">*@
                    <label class="custom-file-label" for="Logofile">اختر اللوجو</label>
                </div>
            </div>
            <div class="form-group">
                <label for="Active">نشط؟</label>
                @Html.CheckBoxFor(m => m.Active)

            </div>

        </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">اغلاق</button>
                    <button type="submit" class="btn btn-primary">حفظ التعديلات</button>
                </div>
            }
        </div>
    </div>
</div>
