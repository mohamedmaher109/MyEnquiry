@{
}
@model ICollection<MyEnquiry_DataLayer.Models.Banks>
<table class="table datatables" id="dataTable-1">
    <thead>
        <tr>
            <th>اللوجو</th>
            <th>الاسم</th>
            <th>نشط</th>

            <th>تعديل</th>
            <th>حذف</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="avatar avatar-md">
                    <img src="@Url.Content(item.Logo)"  class="avatar-img rounded-circle">
                </div>
            </td>

            <td>@item.NameAr</td>
            <td>
                @if (item.Active == true)
                {



                    <label class="alert-info">نشط</label>
                }
                else
                {
                    <label class="alert-danger">غير نشط</label>

                }

            </td>

            <td>
                <button type="button" data-id="@item.Id" class="btn mb-2 btn-outline-primary editbank">تعديل</button>

            </td>
            <td>
                <button type="button" data-id="@item.Id" class="btn mb-2 btn-outline-danger deletebank">حذف</button>

            </td>
        </tr>
        }



    </tbody>
</table>