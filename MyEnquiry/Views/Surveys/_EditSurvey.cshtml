		</div>*@

			<div class="form-group">
				<label for="CaseTypeId">نوع الحالة</label>
				@Html.DropDownListFor(m => m.CaseTypeId, (IEnumerable<SelectListItem>)ViewBag.CaseTypes, new { @class = "form-control" })
			</div>

			<div class="form-group">
				<label for="BankId">البنك</label>
				@Html.DropDownListFor(m => m.BankId, (IEnumerable<SelectListItem>)ViewBag.Banks, new { @class = "form-control" })
			</div>

			<div class="form-group">
				<label for="Description">وصف الإستعلام</label>
				@Html.TextAreaFor(m => m.Description, 5, 4, new { @class = "form-control", @type = "text", @placeholder = "هذا الوصف سيتم عرضه فى الاستماره" })
			</div>

			@*<div class="form-group">
				<label for="Logo1">الشعار الأول</label>
