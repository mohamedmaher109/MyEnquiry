@model MyEnquiry_BussniessLayer.ViewModels.SurveyFormVm
<!-- Modal -->
<div class="modal fade" id="EditSurveyModal" tabindex="-1" role="dialog" aria-labelledby="defaultModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="defaultModalLabel">تعديل الإستعلام</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			@using (Html.BeginForm("Edit", "Surveys", new { area = "" }, FormMethod.Post, true, new { @id = "formaEdit" }))
			{
		<div class="modal-body">

			@Html.HiddenFor(m => m.Id)
			@*<div class="form-group">
			<label for="Name">اسم الإستعلام*</label>
