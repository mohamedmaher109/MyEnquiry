			</div>

			<div class="form-group">
				<label for="Logo1Text">اسم الشعار الأول</label>
				@Html.TextBoxFor(m => m.Logo1Text, new { @class = "form-control", @type = "text", @placeholder = "هذا الاسم سيتم عرضه تحت الشعار الأول" })
			</div>

			<div class="form-group">
				<label for="Logo2">الشعار الثاني</label>
				<br />
				<small class="text-danger">*لحذف الشعار ، برجاء التوجه إلى صفحه التفاصيل</small>
				<input type="file" accept="image/*" name="Logo2" id="Logo2" class="form-control" />
			</div>

			<div class="form-group">
				<label for="Logo2Text">اسم الشعار الثاني</label>
				@Html.TextBoxFor(m => m.Logo2Text, new { @class = "form-control", @type = "text", @placeholder = "هذا الاسم سيتم عرضه تحت الشعار الثاني" })
			</div>*@

			<div class="form-group">
				<label for="IsAcceptingResponses">الإستعلام يستقبل ردود؟</label>
				@Html.CheckBoxFor(m => m.IsAcceptingResponses)
			</div>
		</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">اغلاق</button>
					<button type="submit" class="btn btn-primary">حفظ التعديلات</button>
				</div>
